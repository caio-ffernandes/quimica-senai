<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <main>
        <a href="/home"><button class="btn btn-light">Home</button></a>
        <a href="/composto/lista"><button class="btn btn-light">Composto</button></a>
        <a href="/grupo/lista"><button class="btn btn-light">Grupo</button></a>
        <a href="/propriedade/lista"><button class="btn btn-light">Propriedade</button></a>
        <a href="/uso/lista"><button class="btn btn-light">Uso</button></a>
        <a href="/usuario/lista"><button class="btn btn-light">Usuario</button></a>
        <a href="/logout"><button class="btn btn-light m-5">Sair</button></a>
        <h2>Listando usuarios</h2>
        <section class="list">
            <div class="row">
                <button class="btn bg-warning"><a href="/usuario" class="btn"><i class="bi bi-plus-square-dotted"></i> Cadastrar Usuario</a></button>
            </div>
            <div class="row border-top border-end border-start border-2 border-dark rounded m-2 p-1 d-flex ">
                <div class="col border-end d-flex justify-content-center align-self-center">Id do Usuario</div>
                <div class="col border-end d-flex justify-content-center align-self-center">Nome do Usuario</div>
                <div class="col border-end d-flex justify-content-center align-self-center">Email do Usuario</div>
                <div class="col border-end d-flex justify-content-center align-self-center">Senha do Usuario</div>
                <div class="col border-end d-flex justify-content-center align-self-center">Nivel do Usuario</div>
                <div class="col border-end d-flex justify-content-center align-self-center">Criação do Usuario</div>
              
                  
                <div class="col border-end d-flex justify-content-center align-self-center">Alterar</div>
                <div class="col d-flex justify-content-center align-self-center">Apagar</div>
            </div>

            <% for(let usuario of usuarios){  %>

              <!-- Inicio do loop de dados -->
              <div class="row border border-1 border-warning rounded m-2 p-1 d-flex ">
                <div class="col border-end d-flex justify-content-center align-self-center"><%= usuario.id %></div>
                <div class="col border-end d-flex justify-content-center align-self-center"><%= usuario.nome %></div>
                <div class="col border-end d-flex justify-content-center align-self-center"><%= usuario.email %></div>
                <div class="col border-end d-flex justify-content-center align-self-center"><%= usuario.senha %></div>
                <div class="col border-end d-flex justify-content-center align-self-center"><%= usuario.tipo %></div>
                <div class="col border-end d-flex justify-content-center align-self-center"><%= usuario.data %></div>
               
                  
                  <div class="col border-end d-flex justify-content-center align-self-center"><button onclick="atualizar(<%= usuario.id %>)" class="btn bg-success"><i class="bi bi-pen"></i>  Update</button></div>
                  <div class="col d-flex justify-content-center align-self-center"><button onclick="apagar(<%= usuario.id %>)" class="btn bg-danger"> <i class="bi bi-trash3"></i> Delete</button></div>
              </div>

            <% } %>
            
           
            
        </section>

    </main>
    <script>

        async function apagar(id){
         
          
          const resposta = await fetch('apagar/'+id, { method:'DELETE' })
          const json = await resposta.json()
          const status = await json
  
          console.log(status)
  
          location.reload()
        }
  
        function atualizar(id){
            location.href = "alterar/"+id
        }
  
      </script>
</body>
</html>